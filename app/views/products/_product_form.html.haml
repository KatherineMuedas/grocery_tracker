= simple_form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2
        = pluralize(@product.errors.count, "error")
        prohibited
        this product from being saved:
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg
  .row
    .small-12.small-centered
      .form-group
        = f.input :name, label: 'Product Name: ' 
        %br/
      .form-group
        = f.input :product_type, label: 'Product type:'
        %br/
        = f.hidden_field :product_cycle, value: "stock" 
      = f.fields_for :lattest_purchase, @product.lattest_purchase do |purchase|
        .nested-fields
          = purchase.input :quantity
          = purchase.input :unit_measurement
          = purchase.input :store
          = purchase.input :expiration_date
          = purchase.input :purchase_date
          = purchase.input :price
          = purchase.input :unit_price

  .row
    .small-12.small-centered
      = f.submit 'Submit', :class => 'button right'
      / = link_to 'Back', list_path(@list.id), class: 'button left'





